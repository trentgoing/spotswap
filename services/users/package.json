{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -e js,graphql -x node -r dotenv/config src/index.js",
    "debug": "nodemon -e js,graphql -x node --inspect -r dotenv/config src/index.js",
    "lint": "eslint src",
    "test": "jest",
    "watch-tests": "jest --watchAll",
    "dev": "npm-run-all --parallel start playground",
    "coverage": "jest --coverage",
    "playground": "graphql playground",
    "prisma": "prisma",
    "graphql": "graphql"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-yoga": "1.4.3",
    "jsonwebtoken": "9.0.0",
    "prisma-binding": "1.5.16"
  },
  "devDependencies": {
    "dotenv": "6.1.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.6.0",
    "eslint-watch": "^4.0.2",
    "jest": "^23.6.0",
    "nodemon": "1.18.4",
    "supertest": "^3.3.0",
    "graphql-cli": "^2.16.4",
    "npm-run-all": "4.1.3",
    "prisma": "1.3.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "log"
          ]
        }
      ]
    }
  }
}
